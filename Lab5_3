#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <math.h>
#define _USE_MATH_DEFINES

int main() {
	setlocale(LC_ALL, "RUS");
	int A, B, C;
	int ans1, ans2;
	double x, y, p, a, b;

	p = 0.5;
	puts("Введи число Х\n");
	scanf_s("%lg", &x);
	a = log((p * p) + (x * x * x));
	b = exp(pow(fabs(x), 1. / 2));
	y = pow(a, 3.) / pow(b, 2.);

	A = (int)a;
	B = (int)b;
	C = (int)y;

	//A = 3;
	//B = 6;
	//C = 9;
	printf("A = %i\nB = %i\nY = %i\n", A, B, C);
	ans1 = (A % 2 == 0 ^ B % 2 == 0);
	printf("Условие % i\n", ans1);
	ans2 = ((A % 3 == 0) & (B % 3 == 0) & (C % 3 == 0));
	printf("Условие % i\n", ans1);
	

}
